<LoginScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.6
        pos_hint: {"center_y": 0.4}

        MDTextField:
            id: nameInput
            hint_text: "Name:"
            multiline: False
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_x: 0.5

        MDTextField:
            id: passwordInput
            hint_text: "Password:"
            multiline: False
            password: True
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_x: 0.5

        AnchorLayout:
            size_hint_y: 0.2
            MDRaisedButton:
                text: "Login"
                size_hint: None, None
                size: 150, 50
                on_release: root.validateCreds(nameInput.text, passwordInput.text)



<HomeScreen>:
    MDTopAppBar:
        left_action_items: [["arrow-left", lambda y: app.root.backButton(y)]]
        right_action_items: [["cog", lambda x: app.root.switchScreen('editThemeScreen')]]
        pos_hint: {"top": 1}

    FloatLayout:
        MDRaisedButton:
            id: EODButton
            text: "End Of Day Sign Out"
            size_hint: None,None
            pos_hint: {"center_x":.7, "center_y":.65}
            on_release: app.root.switchScreen('EOD')

        MDRaisedButton:
            id: ExtCareButton
            text: "Extended Care"
            size_hint: None,None
            pos_hint: {"center_x":.7, "center_y":.35}
            on_release:

        Image:
            source: "images/SRDC_Logo.png" #"TheCrizzler.jfif" #"Taylor.jpg" 
            md_bg_color: 0.1, 0.1, 0.1, 1
            size_hint: None, None
            size: dp(250), dp(250) #dp(350), dp(350) For the funnies
            allow_stretch: True
            keep_ratio: True
            pos_hint: {"center_x": 0.25, "center_y":.3}



