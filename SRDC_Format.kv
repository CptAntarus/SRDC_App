<SelectionScreen>:
    MDTopAppBar:
        title: "Cemper Selection"
        left_action_items: [["arrow-left", lambda y: app.root.backButton(y)]]
        right_action_items: [["home", lambda x: app.root.switchScreen('home')]]
        pos_hint: {"top": 1}

    MDFloatLayout:
        MDLabel:
            size_hint: .2,.2
            pos_hint: {"center_x":.15,"center_y":.85}
            text: "Last Name:"
        MDLabel:
            id: familyName
            size_hint: .2,.2
            pos_hint: {"center_x":.3,"center_y":.85}
            text: ""

        MDLabel:
            size_hint: .2,.2
            pos_hint: {"center_x":.15,"center_y":.8}
            text: "Password:"
        MDLabel:
            id: familyPassword  # Add pswd in .py
            size_hint: .2,.2
            pos_hint: {"center_x":.3,"center_y":.8}
            text: ""

        BoxLayout:
            orientation: 'vertical'
            padding: "10dp"
            spacing: "10dp"
            size_hint: 1, 0.4
            pos_hint: {"center_x": 0.5, "center_y": 0.45}

            ScrollView:
                MDList:
                    id: familyList

        MDRaisedButton:
            text: "Select All"
            id: toggleAllBtn
            size_hint: None,None
            size: "250dp", "48dp"
            pos_hint: {"center_x": 0.9, "center_y":.7}
            on_release: root.selectAll()

        MDRaisedButton:
            text: "Add Selected"
            size_hint: None, None
            size: "200dp", "48dp"
            pos_hint: {"center_x": 0.5, "center_y":.15}
            on_release: root.addToList()



<EditThemeScreen>:
